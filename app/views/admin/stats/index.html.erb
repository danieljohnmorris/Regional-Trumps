<h1>Listing stats</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Name</th>
    <th>Type</th>
  </tr>

<% @stats.each do |stat| %>
  <tr>
    <td><%=h stat.category_id %></td>
    <td><%=h stat.name %></td>
    <td><%=h stat.type %></td>
    <td><%= link_to 'Show', admin_stat_path(stat) %></td>
    <td><%= link_to 'Edit', edit_admin_stat_path(stat) %></td>
    <td><%= link_to 'Destroy', admin_stat_path(stat), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New stat', new_admin_stat_path %>