<h1>New value</h1>

<% form_for([:admin, @value]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :card_id %><br />
  <%= f.collection_select :card_id, Card.all, :id, :name, :prompt => "Select..." %>
</p>
<p>
  <%= f.label :stat_id %><br />
  <%= f.collection_select :stat_id, Stat.all, :id, :name, :prompt => "Select..." %>
  </p>
  <p>
    <%= f.label :value %><br />
    <%= f.text_field :value %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', admin_values_path %>