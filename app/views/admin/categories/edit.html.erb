<h1>Editing category</h1>

<% form_for(@category, :url => admin_category_path(@category), :html => {:method => :put}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :game_type_id %><br />
    <%= f.collection_select :game_type_id, GameType.all, :id, :name, :prompt => "Select..." %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', admin_category_path(@category) %> |
<%= link_to 'Back', admin_categories_path %>