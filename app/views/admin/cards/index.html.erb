<h1>Listing cards</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Parent</th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td><%=h card.name %></td>
    <td><%=h card.parent_id %></td>
    <td><%= link_to 'Show', admin_card_path(card) %></td>
    <td><%= link_to 'Edit', edit_admin_card_path(card) %></td>
    <td><%= link_to 'Destroy', admin_card_path(card), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New card', new_admin_card_path %>