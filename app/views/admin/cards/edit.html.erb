<h1>Editing card</h1>

<% form_for(@card, :url => admin_card_path(@card), :html => {:method => :put}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :parent_id %><br />
    <%= f.collection_select :parent_id, Card.all, :id, :name, :prompt => "Select..." %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', admin_card_path(@card) %> |
<%= link_to 'Back', admin_cards_path %>